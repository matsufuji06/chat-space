.side-bar  
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, class: "top-items__btn" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user.id), class: "top-items__btn" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      = link_to group_messages_path(group), class: "side-bar__group-list-detail" do
        .group-name
          = group.name
        .message
          = group.show_last_message